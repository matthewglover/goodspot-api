{
  "name": "goodspot-api",
  "version": "1.0.0",
  "description": "API for finding and sharing places",
  "main": "server.js",
  "scripts": {
    "precommit": "npm run lint && npm run flow && npm test && npm run coverage",
    "ava": "ava --verbose --require babel-register",
    "coverage": "nyc check-coverage --lines 100, --functions 100, --branches 100",
    "test": "nyc npm run ava",
    "lint": "eslint './**/*.js'",
    "flow": "flow; test $? -eq 0 -o $? -eq 2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthewglover/goodspot-api.git"
  },
  "author": "Matt Glover (https://github.com/matthewglover)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matthewglover/goodspot-api/issues"
  },
  "homepage": "https://github.com/matthewglover/goodspot-api#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-eslint": "^7.0.0",
    "coveralls": "^2.11.14",
    "eslint": "^3.7.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.2",
    "flow-bin": "^0.32.0",
    "husky": "^0.11.6",
    "nyc": "^8.3.0"
  },
  "dependencies": {
    "@matthewglover/hapi-wrapper": "^0.2.3"
  },
  "engines": {
    "node": "6.2.2"
  }
}
